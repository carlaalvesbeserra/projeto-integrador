@model CadastroPedido

@{
    ViewData["Title"] = "Edição de pedido";
}

<h1>Edição de pedido</h1>
<p>Preencha os dados corretamente para editar um pedido.</p>

<form method="POST" asp-action="Editar">
    <input type="hidden" asp-for="Id">
      <p>
    <label>Nome:</label>
    <input asp-for="Nome" autocomplete="off" required>
    </p>

    <p>
    <label>Telefone:</label>
    <input asp-for="Telefone" autocomplete="off" required>
    </p>

    <p>
    <label>Data de entrega:</label>
    <input asp-for="DataEntrega" autocomplete="off" required>
    </p>

    <p>
    <label>Pedido:</label>
    <input asp-for="Pedido" autocomplete="off" required>
    </p>

 <p>
    <label>Quantidade:</label>
    <input asp-for="Quantidade" autocomplete="off" required>
    </p>

    <input type="reset" value="Limpar">
    <input type="submit" value="Salvar">
    <br>
    <p>@ViewBag.Mensagem</p>
</form>